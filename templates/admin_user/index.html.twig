{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Login</th>
				<th>Roles</th>
				<th>Email</th>
				<th>Name</th>
				<th>Firstname</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.login }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.name }}</td>
					<td>{{ user.firstname }}</td>
					<td>
						<a href="{{ path('app_admin_user_show', {'id': user.id}) }}">Consulter</a>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Pas d'enregistrement trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_user_new') }}">Creation nouveau user</a>
{% endblock %}
