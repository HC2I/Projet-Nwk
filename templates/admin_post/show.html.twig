{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d ') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_admin_post_index') }}">back to list</a>

    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin_post/_delete_form.html.twig') }}
{% endblock %}
